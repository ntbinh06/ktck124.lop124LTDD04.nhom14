<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenberFragment"
    android:id="@+id/gioithieu"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="@drawable/header"
        android:backgroundTint="@color/deep_bluepurple">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="37dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới thiệu thành viên"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:backgroundTint="@color/white"
        android:background="@drawable/round_corner_user"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp">

            <TextView
                android:id="@+id/heade_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhóm 14_LTTD04"
                android:textSize="25sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:fillViewport="false"
        android:layout_marginTop="250dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành viên"
                android:textSize="20sp"
                android:textColor="@color/deep_bluepurple"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:id="@+id/member1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Thanh Bình. MSV:22115053122305"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/member2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lê Thị Kim Ngân. MSV:22115053122324"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/member3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cái Thị Nhân Đức. MSV:22115053122309"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>